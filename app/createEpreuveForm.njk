{% extends "base.njk" %}

{% block content %}
  <h1>Create a New Epreuve</h1>
  <form action="/epreuves/create" method="post" enctype="application/x-www-form-urlencoded">
    <label for="nom">Epreuve Name:</label>
    <input type="text" id="nom" name="nom" required>
    <label for="sport_id">Sport ID:</label>
    <input type="text" id="sport_id" name="sport_id" required>
    <button type="submit">Create Epreuve</button>
  </form>
{% endblock %}
